<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.qwerty.acer.facebooknew.Main2Activity"
    android:weightSum="1"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="390dp"
    android:layout_height="160dp"
    android:background="@drawable/post">



        <ImageButton android:id="@+id/imageButton"
            android:layout_column="23"
            android:background="@drawable/add_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Photos"
            android:id="@+id/textView2"
            android:layout_column="24"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton2"
            android:layout_column="25"
            android:background="@drawable/check_in"
            android:layout_alignTop="@+id/textView2"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check In"
            android:id="@+id/textView4"
            android:layout_column="26"
            android:paddingRight="10dp"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/more"
            android:id="@+id/imageButton3"
            android:layout_column="27"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:id="@+id/textView5"
            android:layout_column="28"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/editText3"
            android:layout_toEndOf="@+id/editText3"
            android:layout_alignBottom="@+id/imageButton3"
            android:paddingTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:background="@android:color/transparent"
        android:paddingTop="75dp"
        android:hint="Whats on your mind...." />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="371dp"
        android:layout_height="49dp"
        android:background="@drawable/lay2">

        <ImageButton
            android:layout_width="12dp"
            android:layout_height="6dp"
            android:background="@drawable/dow1"
            android:id="@+id/imageButton4"
            android:layout_weight="0.42"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="22dp"

            android:layout_alignParentBottom="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:id="@+id/button3"
            android:background="#0000FF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cr7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cristiano "
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:paddingTop="10dp" />

        <ImageButton
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:background="@drawable/arr"
            android:id="@+id/imageButton5"
            android:paddingTop="10dp"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rauf T Mangalad"
            android:id="@+id/textView7"
            android:paddingTop="10dp"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageButton5"
            android:layout_toEndOf="@+id/imageButton5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 hrs"
            android:id="@+id/textView8"
            android:textSize="10dp"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <ImageButton
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/share_with"
            android:id="@+id/imageButton6"
            android:layout_below="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6" />
    </RelativeLayout>





</LinearLayout>

