<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qwerty.acer.facebook52.Status_Posting">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#e9e3e3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To :"
                android:id="@+id/textView21"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView21"
                android:layout_toEndOf="@+id/textView21"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="35dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText14"

            android:layout_alignParentTop="true"
            android:hint="Whats on your mind?" />




    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="132dp"
            android:background="#f1e9e9">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageButton15"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:drawable/ic_menu_camera"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/location_2"
                android:id="@+id/imageButton16"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton15"
                android:layout_toEndOf="@+id/imageButton15"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/babbu"
                android:id="@+id/imageButton17"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton16"
                android:layout_toEndOf="@+id/imageButton16"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/imageView2"

                android:layout_marginTop="125dp" />
        </RelativeLayout>


    </RelativeLayout>

</ScrollView>
