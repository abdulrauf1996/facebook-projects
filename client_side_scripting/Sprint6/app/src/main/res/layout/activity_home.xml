    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp">

        <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="160dp"
        android:background="@drawable/post"
        android:id="@+id/relativeLayout">



        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText10"
            android:paddingTop="75dp"
            android:hint="Whats on your mind......"
            android:gravity="top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sts_post"
                android:id="@+id/imageButton"
                android:layout_above="@+id/editText10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:id="@+id/textView9"
                android:layout_above="@+id/editText10"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/check_in"
                android:id="@+id/imageButton3"
                android:layout_marginLeft="61dp"
                android:layout_marginStart="61dp"
                android:layout_above="@+id/editText10"
                android:layout_alignLeft="@+id/editText10"
                android:layout_alignStart="@+id/editText10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check_in"
                android:id="@+id/textView10"
                android:layout_alignBottom="@+id/textView9"
                android:layout_toRightOf="@+id/imageButton3"
                android:layout_toEndOf="@+id/imageButton3" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/zoom"
                android:id="@+id/imageButton21"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:layout_alignBottom="@+id/textView10"
                android:layout_toRightOf="@+id/textView10"
                android:layout_toEndOf="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/textView11"
                android:layout_alignTop="@+id/textView10"
                android:layout_toRightOf="@+id/imageButton21"
                android:layout_toEndOf="@+id/imageButton21" />




    </RelativeLayout>
        <RelativeLayout
